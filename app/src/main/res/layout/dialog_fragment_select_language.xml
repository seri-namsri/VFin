<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:minWidth="300dp"
    android:layout_height="match_parent"
    android:padding="@dimen/margin"
    android:orientation="vertical">

    <com.mvision.vfin.customview.TextViewWithFont
        app:type ="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="กรุณาเลือกภาษา"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/text_big_size"
        app:name="Kanit" />


    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_marginTop="@dimen/margin_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:textColor="@color/colorTextGray"
            android:id="@+id/radioButtonThai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ไทย" />


        <RadioButton
            android:textColor="@color/colorTextGray"
            android:id="@+id/radioButtonEnglish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English" />
    </RadioGroup>

    <com.mvision.vfin.customview.ButtonWithFont
        android:layout_marginTop="@dimen/margin_3"
        android:textColor="@color/colorOrangeText"
        android:background="@drawable/button_radius_yello"
        app:name = "Kanit"
        app:type ="bold"
        android:id="@+id/buttonOK"
        android:layout_marginBottom="@dimen/margin"
        android:text="@string/text_button_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>