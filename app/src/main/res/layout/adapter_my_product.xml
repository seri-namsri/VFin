<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin"
    android:layout_marginRight="@dimen/margin"
    android:layout_marginTop="@dimen/margin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.mvision.vfin.customview.TextViewWithFont
            android:id="@+id/textViewName"
            android:text="Test"
            android:padding="@dimen/margin"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_normal_size"
            app:name="Kanit" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_margin="@dimen/margin"
                android:id="@+id/imageViewProduct"
                android:layout_width="0dp"
                android:scaleType="centerCrop"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@color/colorTextGray" />

            <LinearLayout
                android:layout_margin="@dimen/margin"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_weight="3">

                <com.mvision.vfin.customview.TextViewWithFont
                    android:id="@+id/textViewOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.mvision.vfin.customview.TextViewWithFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:name = "Kanit"
                    android:textSize="@dimen/text_normal_size"
                    android:id="@+id/textViewDetail"/>

                <com.mvision.vfin.customview.TextViewWithFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:name = "Kanit"
                    app:type = "bold"
                    android:textSize="@dimen/text_normal_size"
                    android:id="@+id/textViewAddressName"/>

                <com.mvision.vfin.customview.TextViewWithFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:name = "Kanit"
                    android:layout_marginTop="@dimen/margin"
                    android:textSize="@dimen/text_normal_size"
                    android:id="@+id/textViewAddressDetail"/>
            </LinearLayout>


        </LinearLayout>
        <com.mvision.vfin.customview.ButtonWithFont
            android:id="@+id/buttonClick"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.v7.widget.CardView>