<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBgApp"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:theme="@style/ToolbarColoredBackArrow" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.mvision.vfin.customview.TextViewWithFont
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginTop="@dimen/margin"
                android:hint="@string/fragmentAddAddressNameReciver"
                android:paddingLeft="@dimen/margin"
                android:textSize="@dimen/text_small_size"
                app:name="Kanit"
                app:type="bold" />

            <com.mvision.vfin.customview.EditTextWithFont
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:background="@drawable/button_background_black_corner"
                android:maxLines="1"
                android:padding="@dimen/margin"
                android:textSize="@dimen/text_small_size"
                app:name="Kanit" />

            <com.mvision.vfin.customview.TextViewWithFont
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginTop="@dimen/margin"
                android:hint="@string/fragmentAddAddressTelReciver"
                android:paddingLeft="@dimen/margin"
                android:textSize="@dimen/text_small_size"
                app:name="Kanit"
                app:type="bold" />

            <com.mvision.vfin.customview.EditTextWithFont
                android:id="@+id/editTextTel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:background="@drawable/button_background_black_corner"
                android:inputType="number"
                android:maxLines="1"
                android:padding="@dimen/margin"
                android:textSize="@dimen/text_small_size"
                app:name="Kanit" />

            <com.mvision.vfin.customview.TextViewWithFont
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginTop="@dimen/margin"
                android:hint="@string/fragmentAddAddressHourNumber"
                android:paddingLeft="@dimen/margin"
                android:textSize="@dimen/text_small_size"
                app:name="Kanit"
                app:type="bold" />

            <com.mvision.vfin.customview.EditTextWithFont
                android:id="@+id/editTextNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:background="@drawable/button_background_black_corner"
                android:padding="@dimen/margin"
                android:textSize="@dimen/text_small_size"
                app:name="Kanit" />

            <com.mvision.vfin.customview.TextViewWithFont
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginTop="@dimen/margin"
                android:hint="@string/fragmentAddAddressHourStreetDistrict"
                android:paddingLeft="@dimen/margin"
                android:textSize="@dimen/text_small_size"
                app:name="Kanit"
                app:type="bold" />

            <com.mvision.vfin.customview.EditTextWithFont
                android:id="@+id/textViewDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:background="@drawable/button_background_black_corner"
                android:padding="@dimen/margin"
                android:textSize="@dimen/text_small_size"
                app:name="Kanit" />

            <com.mvision.vfin.customview.TextViewWithFont
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginTop="@dimen/margin"
                android:hint="@string/fragmentAddAddressProvince"
                android:paddingLeft="@dimen/margin"
                android:textSize="@dimen/text_small_size"
                app:name="Kanit"
                app:type="bold" />

            <com.mvision.vfin.customview.TextViewWithFont
                android:id="@+id/textViewProvince"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:background="@drawable/button_background_black_corner"
                android:drawableRight="@drawable/expand_button"
                android:padding="@dimen/margin"
                android:textSize="@dimen/text_small_size"
                app:name="Kanit" />

            <com.mvision.vfin.customview.TextViewWithFont
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginTop="@dimen/margin"
                android:hint="@string/fragmentAddAddressDistrice"
                android:paddingLeft="@dimen/margin"
                android:textSize="@dimen/text_small_size"
                app:name="Kanit"
                app:type="bold" />

            <com.mvision.vfin.customview.TextViewWithFont
                android:id="@+id/textViewDistrict"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:background="@drawable/button_background_black_corner"
                android:drawableRight="@drawable/expand_button"
                android:padding="@dimen/margin"
                android:textSize="@dimen/text_small_size"
                app:name="Kanit" />


            <com.mvision.vfin.customview.TextViewWithFont
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginTop="@dimen/margin"
                android:hint="@string/fragmentAddAddressPostalCode"
                android:paddingLeft="@dimen/margin"
                android:textSize="@dimen/text_small_size"
                app:name="Kanit"
                app:type="bold" />

            <com.mvision.vfin.customview.EditTextWithFont
                android:id="@+id/editTextPostalCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:background="@drawable/button_background_black_corner"
                android:inputType="number"
                android:maxLines="1"
                android:padding="@dimen/margin"
                android:textSize="@dimen/text_small_size"
                app:name="Kanit" />


            <com.mvision.vfin.customview.TextViewWithFont
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginTop="@dimen/margin"
                android:hint="@string/fragmentAddAddressNameAddress"
                android:paddingLeft="@dimen/margin"
                android:textSize="@dimen/text_small_size"
                app:name="Kanit"
                app:type="bold" />

            <com.mvision.vfin.customview.EditTextWithFont
                android:id="@+id/editTextNameAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:background="@drawable/button_background_black_corner"
                android:maxLines="1"
                android:padding="@dimen/margin"
                android:textSize="@dimen/text_small_size"
                app:name="Kanit" />

            <com.mvision.vfin.customview.ButtonWithFont
                android:id="@+id/buttonOk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:background="@drawable/button_radius_yello"
                android:text="@string/textSave"
                android:textColor="@color/colorOrangeText"
                app:name="Kanit"
                app:type="bold" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>